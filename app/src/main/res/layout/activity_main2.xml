<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity2">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SMS kodni kiriting"
        android:textSize="25dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bir martalik kod"
            android:textSize="18sp"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/text_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7867847388"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_marginStart="10dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="raqamiga yuborildi"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SMS kod"
            android:layout_marginStart="20dp"
            android:textSize="18sp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:45"
            android:textSize="18sp"
            android:layout_marginStart="200dp"/>
    </LinearLayout>

    <EditText
        android:id="@+id/edt_cod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:background="@drawable/rec"
        android:hint="****g rgygeruygertgeru"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_width="30sp"
            android:layout_height="20sp"
            android:src="@drawable/shape"
            android:layout_marginStart="20dp"/>
        <TextView
            android:id="@+id/kodni_qayta_olish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kodni qayta olish"
            android:layout_marginStart="10dp"
            android:textColor="#05EA0F"/>
    </LinearLayout>


</LinearLayout>